@page "/forgotpassword"
@page "/forgotpassword/{RedirectURL}"

@inherits MovieTraders.Blazor.PageBase.Common

@if (!string.IsNullOrEmpty(AlternateContentMessage))
{
    <AlternateContent Message="@AlternateContentMessage" />

    <a class="btn btn-primary" href="/login">Login</a>
}
else
{
    <div class="container form-wrapper">

        <FormHeader Title="Recover Password" />

        <EditForm Model="@input" OnValidSubmit="@ValidSubmit">
            <DataAnnotationsValidator />

            <div class="text-danger mb-2">@FormError</div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="text" class="form-control" @bind="input.Email" />
                <ValidationMessage For="@(() => input.Email)" />
            </div>

            <div class="form-group">
                <label asp-for="P">Phone</label>
                <input type="text" class="form-control" @bind="input.Phone" />
                <ValidationMessage For="@(() => input.Phone)" />
            </div>

            <SaveDisable SaveButtonText="Recover Password" Saving="@Saving" />

        </EditForm>

    </div>
}
